<h1>Ideas Index page</h1>

<% @ideas.each do |idea|%>   
    <div>
        <h2> <%= link_to idea.title, idea_path(idea)%> </h2>
        <p> <%= idea.description%> </p>           
        <div class="container-fluid d-grid gap-2 d-md-flex justify-content-md-end">
            By <%= idea.user.full_name%>
            <% like = idea.likes.find_by(user: current_user)%>
            <% if like.present? %>
                <%= button_to "Unlike", like_path(like), method: :delete %>
            <% else %>
                <%= button_to "Like", idea_likes_path(idea), method: :post %>
            <% end %>
            Likes: <%= idea.likes.count%>
        </div>
        <hr>
    </div>
<% end %>