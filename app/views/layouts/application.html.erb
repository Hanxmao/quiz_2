<!DOCTYPE html>
<html>
  <head>
    <title>Quiz2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

     <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="<%= root_path %>">Idea Factory</a>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="<%= new_idea_path %>">New idea</a>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link disabled">Hello <%= current_user.full_name %> </a>
              </li>
              <li class="nav-item">
              <div><%= button_to "Log out", session_path, method: :delete, class: "btn btn-danger" %></div>
              </li>
            <% else %>
              <li class="nav-item">
                <div class="nav-link">
                  <a class="btn btn-primary btn-sm" href="<%= new_session_path %>">Sign In</a>
                </div>
              </li>
              <li class="nav-item">
                <div class="nav-link">
                  <a class="btn btn-primary btn-sm" href="<%= new_user_path %>">Sign Up</a>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= flash[:notice] || flash[:alert] %>
    <%= yield %>
  </body>
</html>
